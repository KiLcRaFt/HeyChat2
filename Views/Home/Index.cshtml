@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<p>Enter your name to join the chat:</p>

@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required />

    <button type="submit">Login</button>
}